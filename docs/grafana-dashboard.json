{
  "dashboard": {
    "title": "KubeTasker Monitoring",
    "tags": ["kubetasker", "kubernetes"],
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 38,
    "panels": [
      {
        "id": 1,
        "title": "Ktasks by Status",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum by (phase) (ktask_status_count)",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 2,
        "title": "Active Reconciles",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
        "targets": [
          {
            "expr": "kubetasker_controller_active_reconciles",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Reconciliation Errors (Rate)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(kubetasker_controller_reconcile_errors_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.01 },
                { "color": "red", "value": 0.1 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Total Ktasks",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
        "targets": [
          {
            "expr": "sum(ktask_status_count)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "title": "Ktasks Over Time by Phase",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "ktask_status_count",
            "legendFormat": "{{namespace}} - {{phase}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "stacking": { "mode": "normal" }
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Reconciliation Duration (p95)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, result) (rate(kubetasker_controller_reconcile_duration_seconds_bucket[5m])))",
            "legendFormat": "{{result}} (p95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum by (le, result) (rate(kubetasker_controller_reconcile_duration_seconds_bucket[5m])))",
            "legendFormat": "{{result}} (p50)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Reconciliation Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum by (result) (rate(kubetasker_controller_reconcile_duration_seconds_count[5m]))",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Controller Pod Memory",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{namespace=\"kubetasker\", pod=~\".*controller.*\"}",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      }
    ]
  }
}
